                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "genre_name"
                                ],
                                "properties": {
                                    "genre_name": {
                                        "type": "string",
                                        "maxLength": 50,
                                        "example": "Acción"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Género actualizado exitosamente"
                    },
                    "404": {
                        "description": "Género no encontrado"
                    },
                    "422": {
                        "description": "Error de validación"
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            },
            "delete": {
                "tags": [
                    "Géneros"
                ],
                "summary": "Eliminar un género (Solo administradores)",
                "operationId": "4ddc050edb0bf18c202c611a028f457f",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "ID del género",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Género eliminado exitosamente"
                    },
                    "403": {
                        "description": "Acceso denegado - Se requieren permisos de administrador"
                    },
                    "404": {
                        "description": "Género no encontrado"
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            }
        }
    },
